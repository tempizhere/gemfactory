# Обязательные настройки
# Получите токен от @BotFather в Telegram
BOT_TOKEN=your_bot_token_here

# Основные настройки (опциональные, есть дефолты)
ADMIN_USERNAME=your_telegram_username
WHITELIST_DIR=data
TZ=Europe/Moscow

# Настройки кэша и производительности
CACHE_DURATION=8h
REQUEST_DELAY=10s

# ==================================================================
# Дополнительные настройки (раскомментируйте при необходимости)
# ==================================================================

# Retry настройки
# MAX_RETRIES=3
# RETRY_MAX_ATTEMPTS=3
# RETRY_INITIAL_DELAY=1s
# RETRY_MAX_DELAY=30s
# RETRY_BACKOFF_MULTIPLIER=2.0

# Производительность
# MAX_CONCURRENT_REQUESTS=5

# HTTP клиент
# HTTP_MAX_IDLE_CONNS=100
# HTTP_MAX_IDLE_CONNS_PER_HOST=10
# HTTP_IDLE_CONN_TIMEOUT=90s
# HTTP_TLS_HANDSHAKE_TIMEOUT=10s
# HTTP_RESPONSE_HEADER_TIMEOUT=30s
# HTTP_DISABLE_KEEP_ALIVES=false

# Health Check
# HEALTH_CHECK_ENABLED=true
# HEALTH_CHECK_PORT=8080
# HEALTH_CHECK_INTERVAL=30s

# Rate Limiting
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_REQUESTS=10
# RATE_LIMIT_WINDOW=60s

# Command Cache
# COMMAND_CACHE_ENABLED=true
# COMMAND_CACHE_TTL=5m

# Метрики и логирование
# METRICS_ENABLED=false
# LOG_LEVEL=info
# GRACEFUL_SHUTDOWN_TIMEOUT=10s